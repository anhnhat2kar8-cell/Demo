speedBox.Size = UDim2.new(0, 50, 0, 25)
speedBox.Text = "2"
speedBox.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
speedBox.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Hiển thị máu mục tiêu
local healthLabel = Instance.new("TextLabel", Frame)
healthLabel.Text = "Máu mục tiêu: ..."
healthLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
healthLabel.Position = UDim2.new(0, 10, 0, 110)
healthLabel.Size = UDim2.new(1, -20, 0, 30)
healthLabel.BackgroundTransparency = 1
healthLabel.TextSize = 22

-- Tên TT
local statusText = Instance.new("TextLabel", Frame)
statusText.Text = "TT:MatNhanThuc"
statusText.TextColor3 = Color3.fromRGB(0, 255, 127)
statusText.Position = UDim2.new(0, 10, 0, 230)
statusText.Size = UDim2.new(1, -20, 0, 30)
statusText.BackgroundTransparency = 1
statusText.TextScaled = true

-- Tìm boss
local function getBoss()
	for _, v in ipairs(workspace:GetDescendants()) do
		if v:IsA("Model") and v.Name == "Boss" then
			return v
		end
	end
end

-- Đánh boss
local function attackBoss()
	while autoAttack do
		local boss = getBoss()
		if boss and boss:FindFirstChild("HumanoidRootPart") then
			local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
			if hrp then
				local distance = tonumber(distanceBox.Text) or 20
				local speed = tonumber(speedBox.Text) or 2
				hrp.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0, 0, -distance)
				hrp.CFrame = CFrame.lookAt(hrp.Position, boss.HumanoidRootPart.Position)
				healthLabel.Text = "Máu mục tiêu: " .. math.floor(boss.Humanoid.Health)
			end
		end
		task.wait(1 / speed)
	end
end

-- Auto Heal
local function autoHealFunc()
	while autoHeal do
		local human = game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
		if human and human.Health < 80 then
			local tool = nil
			for _, item in ipairs(game.Players.LocalPlayer.Backpack:GetChildren()) do
				if item.Name:lower():find("băng") then
					tool = item
					break
				end
			end
			if tool then
				tool.Parent = game.Players.LocalPlayer.Character
				task.wait(0.2)
			end
		end
		task.wait(2)
	end
end

-- Nút bật/tắt
attackBtn.MouseButton1Click:Connect(function()
	autoAttack = not autoAttack
	attackBtn.Text = (autoAttack and "TẮT" or "BẬT") .. ": Đánh Boss"
	if autoAttack then
		task.spawn(attackBoss)
	end
end)

autoBtn.MouseButton1Click:Connect(function()
	autoAttack = not autoAttack
	autoBtn.Text = (autoAttack and "TẮT" or "BẬT") .. ": Auto Đánh"
	if autoAttack then
		task.spawn(attackBoss)
	end
end)

healBtn.MouseButton1Click:Connect(function()
	autoHeal = not autoHeal
	healBtn.Text = (autoHeal and "TẮT" or "BẬT") .. ": Auto Hồi Máu"
	if autoHeal then
		task.spawn(autoHealFunc)
	end
end)local disLabel = Instance.new("TextLabel", frame)
disLabel.Text = "Khoảng cách:"
disLabel.Size = UDim2.new(0, 150, 0, 30)
disLabel.Position = UDim2.new(0, 10, 0, 50)
