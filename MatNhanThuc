nameText.BackgroundTransparency = 1
nameText.TextScaled = true
-- Hiệu ứng chạy 7 màu cho tên menu
task.spawn(function()
	local hue = 0
	while true do
		hue = (hue + 0.01) % 1 -- Tăng dần màu theo vòng
		local color = Color3.fromHSV(hue, 1, 1) -- Chuyển hue sang RGB
		nameText.TextColor3 = color
		wait(0.05) -- tốc độ chạy màu
	end
end)
-- Giao diện mật khẩu
