    local ratio = math.clamp(hum.Health / hum.MaxHealth, 0, 1)
    HealthBar.Size = UDim2.new(ratio, 0, 1, 0)
    HealthText.Text = string.format("HP: %d%%", math.floor(ratio * 100))

