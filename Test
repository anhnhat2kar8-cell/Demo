local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local lp = Players.LocalPlayer
local chr = lp.Character or lp.CharacterAdded:Wait()
local hum = chr:WaitForChild("Humanoid")
local hrp = chr:WaitForChild("HumanoidRootPart")

-- Bi·∫øn
local radius = 22
local speed = 2
local running = false
local autoAttack = true
local autoHeal = true
local autoLoot = true
local lastWeapon = nil

-- GUI ch√≠nh
local gui = Instance.new("ScreenGui", lp:WaitForChild("PlayerGui"))
gui.Name = "RENX_GUI"
gui.Enabled = true

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 180) -- tƒÉng chi·ªÅu cao
frame.Position = UDim2.new(0, 20, 0.5, -90)
frame.BackgroundTransparency = 1 -- trong su·ªët
frame.Active = true
frame.Draggable = true
frame.BorderSizePixel = 0

-- T√™n
local nameLabel = Instance.new("TextLabel", frame)
nameLabel.Size = UDim2.new(1, 0, 0, 25)
nameLabel.Text = "üíÄüíÄVietNhatüíÄüíÄ"
nameLabel.TextColor3 = Color3.new(1, 1, 1)
nameLabel.BackgroundTransparency = 1
nameLabel.Font = Enum.Font.SourceSansBold
nameLabel.TextSize = 20

-- N√∫t b·∫≠t farm boss
local toggleBtn = Instance.new("TextButton", frame)
toggleBtn.Size = UDim2.new(1, 0, 0, 30)
toggleBtn.Position = UDim2.new(0, 0, 0, 30)
toggleBtn.Text = "B·∫≠t Farm Boss"
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextSize = 18

toggleBtn.MouseButton1Click:Connect(function()
    running = not running
    toggleBtn.Text = (running and "T·∫Øt Farm Boss" or "B·∫≠t Farm Boss")
end)

-- N√∫t Tele t·ªõi boss 15000 m√°u
local teleBtn = Instance.new("TextButton", frame)
teleBtn.Size = UDim2.new(1, 0, 0, 30)
teleBtn.Position = UDim2.new(0, 0, 0, 65)
teleBtn.Text = "Teleport Boss 15000HP"
teleBtn.TextColor3 = Color3.new(1, 1, 1)
teleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
teleBtn.Font = Enum.Font.SourceSansBold
teleBtn.TextSize = 18

teleBtn.MouseButton1Click:Connect(function()
	local foundBoss = nil
	for _,v in pairs(workspace:GetDescendants()) do
		if v:IsA("Model") 
			and v:FindFirstChild("Humanoid") 
			and v:FindFirstChild("HumanoidRootPart") 
			and math.floor(v.Humanoid.Health) == 15000 then
			foundBoss = v
			break
		end
	end
	if foundBoss then
		hrp.CFrame = foundBoss.HumanoidRootPart.CFrame * CFrame.new(0, 3, 0)
	else
		warn("Kh√¥ng t√¨m th·∫•y boss 15000 m√°u!")
	end
end)

-- Kho·∫£ng c√°ch
local distLabel = Instance.new("TextLabel", frame)
distLabel.Size = UDim2.new(0.5, 0, 0, 25)
distLabel.Position = UDim2.new(0, 0, 0, 100)
distLabel.Text = tostring(radius)
distLabel.TextColor3 = Color3.new(1, 1, 1)
distLabel.BackgroundTransparency = 1
distLabel.Font = Enum.Font.SourceSansBold
distLabel.TextSize = 18

local distBox = Instance.new("TextBox", distLabel)
distBox.Size = UDim2.new(1, 0, 1, 0)
distBox.BackgroundTransparency = 1
distBox.TextTransparency = 1
distBox.ClearTextOnFocus = true
distBox.KeyboardType = Enum.KeyboardType.NumberPad

distBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local num = tonumber(distBox.Text)
		if num then
			if num < 21 then num = 21 end
			if num > 25 then num = 25 end
			radius = num
			distLabel.Text = tostring(radius)
		end
		distBox.Text = ""
	end
end)

-- T·ªëc ƒë·ªô quay (ƒë∆∞a xu·ªëng cu·ªëi)
local speedLabel = Instance.new("TextLabel", frame)
speedLabel.Size = UDim2.new(0.5, 0, 0, 25)
speedLabel.Position = UDim2.new(0.5, 0, 0, 150)
speedLabel.Text = tostring(speed)
speedLabel.TextColor3 = Color3.new(1, 1, 1)
speedLabel.BackgroundTransparency = 1
speedLabel.Font = Enum.Font.SourceSansBold
speedLabel.TextSize = 18

local speedBox = Instance.new("TextBox", speedLabel)
speedBox.Size = UDim2.new(1, 0, 1, 0)
speedBox.BackgroundTransparency = 1
speedBox.TextTransparency = 1
speedBox.ClearTextOnFocus = true
speedBox.KeyboardType = Enum.KeyboardType.NumberPad

speedBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local num = tonumber(speedBox.Text)
		if num then
			if num < 1 then num = 1 end
			if num > 10 then num = 10 end
			speed = num
			speedLabel.Text = tostring(speed)
		end
		speedBox.Text = ""
	end
end)

-- H√†m t√¨m m·ª•c ti√™u boss
local function getTarget()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("Humanoid") and v ~= chr and v:FindFirstChild("HumanoidRootPart") and v.Humanoid.Health > 0 then
            return v
        end
    end
end

-- T·ª± ƒë·ªông heal
task.spawn(function()
    while true do
        if autoHeal and hum.Health < 80 then
            local tool = lp.Character:FindFirstChildOfClass("Tool")
            if tool and not tool.Name:lower():find("bƒÉng") then
                lastWeapon = tool
            end
            local bandage = lp.Character and lp.Character:FindFirstChildWhichIsA("Tool")  
            if not bandage or not bandage.Name:lower():find("bƒÉng") then  
                for _,tool in ipairs(lp.Backpack:GetChildren()) do  
                    if tool:IsA("Tool") and tool.Name:lower():find("bƒÉng") then  
                        tool.Parent = lp.Character  
                        wait(0.2)  
                        break  
                    end  
                end  
            end  
            local healTool = lp.Character:FindFirstChildWhichIsA("Tool")  
            if healTool and healTool.Name:lower():find("bƒÉng") then  
                healTool:Activate()  
                wait(1)  
                if lastWeapon and lastWeapon.Parent == lp.Backpack then  
                    lastWeapon.Parent = lp.Character  
                end  
            end  
        end  
        wait(0.5)  
    end
end)

-- T·ª± ƒë·ªông l·ª•m
task.spawn(function()
    while true do
        if autoLoot then
            for _,prompt in pairs(workspace:GetDescendants()) do
                if prompt:IsA("ProximityPrompt") and (prompt.Parent:IsA("BasePart") or prompt.Parent:IsA("MeshPart")) then
                    local dist = (hrp.Position - prompt.Parent.Position).Magnitude
                    if dist < 15 then
                        fireproximityprompt(prompt)
                        wait(0.2)
                    end
                end
            end
        end
        wait(0.5)
    end
end)

-- Auto ƒë√°nh
local function attack()
    local tool = lp.Character and lp.Character:FindFirstChildOfClass("Tool")
    if tool then pcall(function() tool:Activate() end) end
end

-- Di chuy·ªÉn quanh boss
RunService.Heartbeat:Connect(function()
    if running then
        local target = getTarget()
        if target and target:FindFirstChild("HumanoidRootPart") then
            local angle = tick() * speed
            local offset = Vector3.new(math.cos(angle) * radius, 0, math.sin(angle) * radius)
            local goalPos = target.HumanoidRootPart.Position + offset
            local tween = TweenService:Create(hrp, TweenInfo.new(0.1), {CFrame = CFrame.new(goalPos, target.HumanoidRootPart.Position)})
            tween:Play()
            hum.AutoRotate = false
            hrp.CFrame = CFrame.new(hrp.Position, target.HumanoidRootPart.Position)
            if autoAttack then attack() end  
        end  
    end
end)
