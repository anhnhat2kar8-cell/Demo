local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LocalPlayer = Players.LocalPlayer
local Backpack = LocalPlayer:WaitForChild("Backpack")

-- GUI
local Window = OrionLib:MakeWindow({Name = "framboss | renx", HidePremium = false, SaveConfig = true, IntroEnabled = false})
local Tab = Window:MakeTab({Name = "framboss", Icon = "rbxassetid://4483345998", PremiumOnly = false})

-- Bi·∫øn chung
local selectedWeapon = nil
local autoFarm = false
local autoHeal = false
local autoPickup = false
local hpThreshold = 60

-- Dropdown ch·ªçn v≈© kh√≠
Tab:AddDropdown({
    Name = "Ch·ªçn V≈© Kh√≠",
    Default = nil,
    Options = {},
    Callback = function(Value)
        selectedWeapon = Value
        OrionLib:MakeNotification({
            Name = "V≈© kh√≠ ƒë√£ ch·ªçn",
            Content = Value,
            Time = 3
        })
    end
})

-- C·∫≠p nh·∫≠t danh s√°ch v≈© kh√≠ li√™n t·ª•c
task.spawn(function()
    while task.wait(2) do
        local weapons = {}
        for _, tool in ipairs(Backpack:GetChildren()) do
            if tool:IsA("Tool") then
                table.insert(weapons, tool.Name)
            end
        end
        Tab:GetChildren()[1]:Refresh(weapons) -- c·∫≠p nh·∫≠t dropdown
    end
end)

-- N√∫t b·∫≠t fram boss
Tab:AddButton({
    Name = "B·∫≠t script fram boss",
    Callback = function()
        autoFarm = not autoFarm
        OrionLib:MakeNotification({
            Name = "Tr·∫°ng Th√°i Fram Boss",
            Content = autoFarm and "ƒê√£ b·∫≠t" or "ƒê√£ t·∫Øt",
            Time = 3
        })
    end
})

-- B·∫≠t auto BƒÉng G·∫°c
Tab:AddToggle({
    Name = "Auto BƒÉng G·∫°c d∆∞·ªõi 60 hp",
    Default = false,
    Callback = function(Value)
        autoHeal = Value
    end
})

-- Auto l·ª•m ƒë·ªì
Tab:AddToggle({
    Name = "Auto L·ª•m ƒê·ªì",
    Default = false,
    Callback = function(Value)
        autoPickup = Value
    end
})

-- Slider ƒëi·ªÅu ch·ªânh % m√°u ƒë·ªÉ h·ªìi
Tab:AddSlider({
    Name = "üîÅ T·∫ßm nh·∫∑t",
    Min = 10,
    Max = 200,
    Default = 50,
    Color = Color3.fromRGB(0,255,140),
    Increment = 1,
    ValueName = "Stud",
    Callback = function(Value)
        hpThreshold = Value
    end
})

-- Hi·ªÉn th·ªã % m√°u Boss
local BossHPBar = Tab:AddParagraph({
    Title = "Thanh M√°u Boss",
    Content = "ƒêang ki·ªÉm tra..."
})

-- H√†m t√¨m Boss
local function getBoss()
    for _, obj in ipairs(workspace:GetChildren()) do
        if obj:IsA("Model") and obj:FindFirstChild("Humanoid") and obj.Name:lower():find("boss") then
            return obj
        end
    end
end

-- Auto h√†nh ƒë·ªông
RunService.RenderStepped:Connect(function()
    local character = LocalPlayer.Character
    if not character or not character:FindFirstChild("HumanoidRootPart") then return end

    local humanoid = character:FindFirstChild("Humanoid")
    if not humanoid then return end

    -- Auto heal
    if autoHeal and humanoid.Health < hpThreshold then
        for _, item in ipairs(Backpack:GetChildren()) do
            if item.Name:lower():find("bƒÉng") then
                item:Activate()
                task.wait(0.5)
            end
        end
    end

    -- Auto farm boss
    if autoFarm then
        local boss = getBoss()
        if boss and boss:FindFirstChild("HumanoidRootPart") then
            local dist = (boss.HumanoidRootPart.Position - character.HumanoidRootPart.Position).Magnitude
            if dist > 5 then
                character:PivotTo(boss.HumanoidRootPart.CFrame * CFrame.new(0, 0, 3))
            end

            if selectedWeapon and Backpack:FindFirstChild(selectedWeapon) then
                Backpack[selectedWeapon].Parent = character
            end
        end
    end

    -- Auto l·ª•m
    if autoPickup then
        for _, item in ipairs(workspace:GetDescendants()) do
            if item:IsA("Tool") and (item.Position - character.HumanoidRootPart.Position).Magnitude < 15 then
                firetouchinterest(item.Handle, character.HumanoidRootPart, 0)
                firetouchinterest(item.Handle, character.HumanoidRootPart, 1)
            end
        end
    end

    -- Update % m√°u Boss
    local boss = getBoss()
    if boss and boss:FindFirstChild("Humanoid") then
        local current = boss.Humanoid.Health
        local max = boss.Humanoid.MaxHealth
        local percent = math.floor((current / max) * 100)
        local filled = math.floor(percent / 5)
        local empty = 20 - filled
        local bar = string.rep("‚ñì", filled) .. string.rep("‚ñë", empty)
        BossHPBar:Set({
            Title = "M√°u Boss",
            Content = string.format("%s %d%%", bar, percent)
        })
    else
        BossHPBar:Set({
            Title = "M√°u Boss",
            Content = "Kh√¥ng t√¨m th·∫•y Boss"
        })
    end
end)

-- Kh·ªüi ƒë·ªông GUI
OrionLib:Init()
