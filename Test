local core = (syn and syn.protect_gui and gethui()) or game:WaitForChild("CoreGui")

-- Tải thư viện Fluent
local success, Fluent = pcall(function()
    return loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()
end)

if not success then
    warn("Không thể tải Fluent UI! Kiểm tra lại kết nối hoặc executor.")
    return
end

-- Gán GUI vào CoreGui
Fluent:SetParent(core)

-- Tạo cửa sổ
local Window = Fluent:CreateWindow({
    Title = "TEST MENU HIỂN THỊ",
    SubTitle = "Chạy thử menu",
    TabWidth = 150,
    Size = UDim2.fromOffset(500, 400),
    Acrylic = true,
    Theme = "Dark"
})

-- Thêm tab
local tab = Window:AddTab({ Title = "Main", Icon = "home" })

-- Thêm một nút để test
tab:AddButton({
    Title = "Thông báo",
    Description = "In ra Hello",
    Callback = function()
        print("Hello từ Fluent UI")
    end
})
