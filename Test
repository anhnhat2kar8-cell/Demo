local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "C·ªông ƒê·ªìng Vi·ªát Nam",
    SubTitle = "Fram Boss Tool",
    TabWidth = 160,
    Size = UDim2.fromOffset(520, 420),
    Acrylic = true,
    Theme = "Dark"
})

local Tabs = {
    FramBoss = Window:AddTab({Title = "Fram Boss", Icon = "swords"}),
    Auto = Window:AddTab({Title = "Auto", Icon = "zap"}),
    Settings = Window:AddTab({Title = "C√†i ƒë·∫∑t", Icon = "settings"})
}

----------------------------------------
-- Fram Boss
----------------------------------------
local FramBossSection = Tabs.FramBoss:AddSection("Fram Boss")

local SpinSpeed = 5
local Radius = 10

Tabs.FramBoss:AddSlider("SpinSpeed", {
    Title = "T·ªëc ƒë·ªô g√≥c quay (rad/s)",
    Default = 5, Min = 1, Max = 20,
    Callback = function(v) SpinSpeed = v end
})

Tabs.FramBoss:AddSlider("Radius", {
    Title = "Kho·∫£ng c√°ch t·ªõi Boss",
    Default = 10, Min = 5, Max = 30,
    Callback = function(v) Radius = v end
})

Tabs.FramBoss:AddToggle("FramBoss", {
    Title = "B·∫≠t Fram Boss üîÑ",
    Default = false,
    Callback = function(Value)
        FramBoss = Value
        if FramBoss then
            task.spawn(function()
                while FramBoss do
                    task.wait()
                    local boss = workspace:FindFirstChild("Boss") -- ‚ö†Ô∏è thay ƒë√∫ng t√™n
                    local player = game.Players.LocalPlayer
                    if boss and boss:FindFirstChild("HumanoidRootPart") and player.Character then
                        local hrp = player.Character:FindFirstChild("HumanoidRootPart")
                        if hrp then
                            local angle = tick() * SpinSpeed
                            local offset = Vector3.new(math.cos(angle)*Radius, 0, math.sin(angle)*Radius)
                            hrp.CFrame = CFrame.new(boss.HumanoidRootPart.Position + offset, boss.HumanoidRootPart.Position)
                        end
                    end
                end
            end)
        end
    end
})

Tabs.FramBoss:AddToggle("ShowBossHP", {
    Title = "Hi·ªÉn th·ªã m√°u Boss ‚ù§Ô∏è",
    Default = false,
    Callback = function(Value)
        ShowBossHP = Value
        if Value then
            task.spawn(function()
                while ShowBossHP do
                    task.wait(1)
                    local boss = workspace:FindFirstChild("Boss")
                    if boss and boss:FindFirstChildOfClass("Humanoid") then
                        Fluent:Notify({
                            Title = "Boss HP",
                            Content = tostring(math.floor(boss.Humanoid.Health)).." / "..tostring(boss.Humanoid.MaxHealth),
                            Duration = 2
                        })
                    end
                end
            end)
        end
    end
})

Tabs.FramBoss:AddToggle("AutoAttack", {
    Title = "T·ª± ƒë√°nh khi c·∫ßm v≈© kh√≠ ‚öîÔ∏è",
    Default = false,
    Callback = function(Value)
        AutoAttack = Value
        if AutoAttack then
            task.spawn(function()
                while AutoAttack do
                    task.wait(0.2)
                    local char = game.Players.LocalPlayer.Character
                    if char then
                        local tool = char:FindFirstChildOfClass("Tool")
                        if tool then tool:Activate() end
                    end
                end
            end)
        end
    end
})

----------------------------------------
-- Auto Heal / Item / Wood
----------------------------------------
local AutoSection = Tabs.Auto:AddSection("T·ª± ƒë·ªông")

local HealHP = 50
Tabs.Auto:AddInput("HealValue", {
    Title = "Heal khi m√°u d∆∞·ªõi",
    Default = "50",
    Placeholder = "Nh·∫≠p s·ªë HP",
    Callback = function(Value)
        local num = tonumber(Value)
        if num then HealHP = num end
    end
})

Tabs.Auto:AddToggle("AutoHeal", {
    Title = "Auto Heal ü©∏",
    Default = false,
    Callback = function(Value)
        AutoHeal = Value
        if AutoHeal then
            task.spawn(function()
                while AutoHeal do
                    task.wait(1)
                    local player = game.Players.LocalPlayer
                    local char = player.Character
                    if char and char:FindFirstChildOfClass("Humanoid") then
                        local hp = char.Humanoid.Health
                        if hp < HealHP then
                            local oldTool = char:FindFirstChildOfClass("Tool")
                            local bandage = player.Backpack:FindFirstChild("Bandage") -- ‚ö†Ô∏è ƒë·ªïi t√™n item
                            if bandage then
                                bandage.Parent = char
                                bandage:Activate()
                                task.wait(1)
                                if oldTool then oldTool.Parent = char end
                            end
                        end
                    end
                end
            end)
        end
    end
})

Tabs.Auto:AddToggle("AutoPickup", {
    Title = "Auto nh·∫∑t v·∫≠t ph·∫©m üéí",
    Default = false,
    Callback = function(Value)
        AutoPickup = Value
        if AutoPickup then
            task.spawn(function()
                while AutoPickup do
                    task.wait(0.5)
                    for _,obj in pairs(workspace:GetDescendants()) do
                        if obj:IsA("ProximityPrompt") then
                            local dist = (game.Players.LocalPlayer.Character.HumanoidRootPart.Position - obj.Parent.Position).Magnitude
                            if dist < 15 then
                                pcall(fireproximityprompt, obj)
                            end
                        end
                    end
                end
            end)
        end
    end
})

Tabs.Auto:AddToggle("AutoWood", {
    Title = "Auto Farm G·ªó üå≤",
    Default = false,
    Callback = function(Value)
        AutoWood = Value
        if AutoWood then
            task.spawn(function()
                while AutoWood do
                    task.wait(1)
                    local player = game.Players.LocalPlayer
                    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
                    if hrp then
                        for _,tree in pairs(workspace.Wood:GetChildren()) do -- ‚ö†Ô∏è thay ƒë√∫ng folder
                            if tree:FindFirstChild("Hitbox") then
                                local dist = (hrp.Position - tree.Hitbox.Position).Magnitude
                                if dist < 20 then
                                    hrp.CFrame = tree.Hitbox.CFrame
                                    local tool = player.Character:FindFirstChildOfClass("Tool")
                                    if tool then tool:Activate() end
                                end
                            end
                        end
                    end
                end
            end)
        end
    end
})

----------------------------------------
-- Settings
----------------------------------------
local SettingsSection = Tabs.Settings:AddSection("C√†i ƒë·∫∑t")

Tabs.Settings:AddButton({
    Title = "·∫®n/Hi·ªán Menu (K)",
    Callback = function()
        Window:Toggle()
    end
})

game:GetService("UserInputService").InputBegan:Connect(function(input, gpe)
    if not gpe and input.KeyCode == Enum.KeyCode.K then
        Window:Toggle()
    end
end)
