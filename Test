local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local RunService = game:GetService("RunService")
local lp = Players.LocalPlayer
local chr = lp.Character or lp.CharacterAdded:Wait()
local hum = chr:WaitForChild("Humanoid")
local hrp = chr:WaitForChild("HumanoidRootPart")

-- Biáº¿n
local radius = 22
local speed = 2
local running = false
local autoAttack = true
local autoHeal = true
local autoLoot = true
local lastWeapon = nil

-- GUI chÃ­nh
local gui = Instance.new("ScreenGui", lp:WaitForChild("PlayerGui"))
gui.Name = "RENX_GUI"
gui.Enabled = true

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 120)
frame.Position = UDim2.new(0, 20, 0.5, -60)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
frame.Active = true
frame.Draggable = true
frame.BorderSizePixel = 0

-- TÃªn
local nameLabel = Instance.new("TextLabel", frame)
nameLabel.Size = UDim2.new(1, 0, 0, 25)
nameLabel.Position = UDim2.new(0, 0, 0, 0)
nameLabel.Text = "ï¿½ï¿½VietNhatðŸ’€"
nameLabel.TextColor3 = Color3.new(1, 1, 1)
nameLabel.BackgroundTransparency = 1
nameLabel.Font = Enum.Font.SourceSansBold
nameLabel.TextSize = 20

-- NÃºt báº­t farm boss
local toggleBtn = Instance.new("TextButton", frame)
toggleBtn.Size = UDim2.new(1, 0, 0, 30)
toggleBtn.Position = UDim2.new(0, 0, 0, 30)
toggleBtn.Text = "Báº­t Farm Boss"
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextSize = 18

-- Label khoáº£ng cÃ¡ch
local distBox = Instance.new("TextBox", frame)
distBox.Size = UDim2.new(0.5, 0, 0, 25)
distBox.Position = UDim2.new(0, 0, 0, 65)
distBox.Text = tostring(radius)
distBox.TextColor3 = Color3.new(1, 1, 1)
distBox.BackgroundTransparency = 0.2
distBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
distBox.Font = Enum.Font.SourceSansBold
distBox.TextSize = 18
distBox.ClearTextOnFocus = true
distBox.PlaceholderText = "Nháº­p"

distBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local num = tonumber(distBox.Text)
		if num then
			if num < 21 then num = 21 end
			if num > 25 then num = 25 end
			radius = num
			distBox.Text = tostring(radius)
		else
			distBox.Text = tostring(radius)
		end
	end
end)

-- TextBox: Tá»‘c Ä‘á»™ quay
local speedBox = Instance.new("TextBox", frame)
speedBox.Size = UDim2.new(0.5, 0, 0, 25)
speedBox.Position = UDim2.new(0.5, 0, 0, 65)
speedBox.Text = tostring(speed)
speedBox.TextColor3 = Color3.new(1, 1, 1)
speedBox.BackgroundTransparency = 0.2
speedBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
speedBox.Font = Enum.Font.SourceSansBold
speedBox.TextSize = 18
speedBox.ClearTextOnFocus = true
speedBox.PlaceholderText = "Nháº­p"

speedBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local num = tonumber(speedBox.Text)
		if num then
			if num < 1 then num = 1 end
			if num > 10 then num = 10 end
			speed = num
			speedBox.Text = tostring(speed)
		else
			speedBox.Text = tostring(speed)
		end
	end
end)

-- Xá»­ lÃ½ báº­t / táº¯t farm boss
toggleBtn.MouseButton1Click:Connect(function()
    running = not running
    toggleBtn.Text = (running and "Táº¯t Farm Boss" or "Báº­t Farm Boss")
end)

-- HÃ m tÃ¬m má»¥c tiÃªu boss
local function getTarget()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("Model") and v:FindFirstChild("Humanoid") and v ~= chr and v:FindFirstChild("HumanoidRootPart") and v.Humanoid.Health > 0 then
            return v
        end
    end
end

-- Tá»± Ä‘á»™ng dÃ¹ng bÄƒng gáº¡c
task.spawn(function()
    while true do
        if autoHeal and hum.Health < 80 then
            local tool = lp.Character:FindFirstChildOfClass("Tool")
            if tool and not tool.Name:lower():find("bÄƒng") then
                lastWeapon = tool
            end

            local bandage = lp.Character and lp.Character:FindFirstChildWhichIsA("Tool")  
            if not bandage or not bandage.Name:lower():find("bÄƒng") then  
                for _,tool in ipairs(lp.Backpack:GetChildren()) do  
                    if tool:IsA("Tool") and tool.Name:lower():find("bÄƒng") then  
                        tool.Parent = lp.Character  
                        wait(0.2)  
                        break  
                    end  
                end  
            end  

            local healTool = lp.Character:FindFirstChildWhichIsA("Tool")  
            if healTool and healTool.Name:lower():find("bÄƒng") then  
                healTool:Activate()  
                wait(1)  
                if lastWeapon and lastWeapon.Parent == lp.Backpack then  
                    lastWeapon.Parent = lp.Character  
                end  
            end  
        end  
        wait(0.5)  
    end
end)

-- Tá»± Ä‘á»™ng lá»¥m Ä‘á»“
task.spawn(function()
    while true do
        if autoLoot then
            for _,prompt in pairs(workspace:GetDescendants()) do
                if prompt:IsA("ProximityPrompt") and (prompt.Parent:IsA("BasePart") or prompt.Parent:IsA("MeshPart")) then
                    local dist = (hrp.Position - prompt.Parent.Position).Magnitude
                    if dist < 15 then
                        fireproximityprompt(prompt)
                        wait(0.2)
                    end
                end
            end
        end
        wait(0.5)
    end
end)

-- Tá»± Ä‘á»™ng Ä‘Ã¡nh
local function attack()
    local tool = lp.Character and lp.Character:FindFirstChildOfClass("Tool")
    if tool then pcall(function() tool:Activate() end) end
end

-- Di chuyá»ƒn quanh boss + auto Ä‘Ã¡nh
RunService.Heartbeat:Connect(function()
    if running then
        local target = getTarget()
        if target and target:FindFirstChild("HumanoidRootPart") then
            local angle = tick() * speed
            local offset = Vector3.new(math.cos(angle) * radius, 0, math.sin(angle) * radius)
            local goalPos = target.HumanoidRootPart.Position + offset
            local tween = TweenService:Create(hrp, TweenInfo.new(0.1), {CFrame = CFrame.new(goalPos, target.HumanoidRootPart.Position)})
            tween:Play()
            hum.AutoRotate = false
            hrp.CFrame = CFrame.new(hrp.Position, target.HumanoidRootPart.Position)

            if autoAttack then attack() end  
        end  
    end
end)
