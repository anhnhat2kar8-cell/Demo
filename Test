local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "C·ªông ƒê·ªìng Vi·ªát Nam",
    SubTitle = "Fram Boss Tool",
    TabWidth = 160,
    Size = UDim2.fromOffset(520, 420),
    Acrylic = true,
    Theme = "Dark"
})

local Tabs = {
    FramBoss = Window:AddTab({Title = "Fram Boss", Icon = "swords"}),
    Auto = Window:AddTab({Title = "Auto", Icon = "zap"}),
    Settings = Window:AddTab({Title = "C√†i ƒë·∫∑t", Icon = "settings"})
}

----------------------------------------
-- Fram Boss
----------------------------------------
local FramBossSection = Tabs.FramBoss:AddSection("Fram Boss")

local SpeedSlider = Tabs.FramBoss:AddSlider("SpinSpeed", {
    Title = "T·ªëc ƒë·ªô g√≥c quay (radian/s)",
    Default = 5,
    Min = 1,
    Max = 20,
    Rounding = 1,
    Callback = function(Value)
        SpinSpeed = Value
    end
})

Tabs.FramBoss:AddToggle("FramBoss", {
    Title = "B·∫≠t Fram Boss üîÑ",
    Default = false,
    Callback = function(Value)
        FramBoss = Value
        if FramBoss then
            task.spawn(function()
                while FramBoss do
                    task.wait()
                    local boss = workspace:FindFirstChild("Boss") -- ‚ö†Ô∏è thay ƒë√∫ng t√™n
                    if boss and boss:FindFirstChild("HumanoidRootPart") and game.Players.LocalPlayer.Character then
                        local hrp = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                        if hrp then
                            hrp.CFrame = boss.HumanoidRootPart.CFrame * CFrame.new(0,0,5) * CFrame.Angles(0, tick()*SpinSpeed, 0)
                        end
                    end
                end
            end)
        end
    end
})

Tabs.FramBoss:AddToggle("ShowBossHP", {
    Title = "Hi·ªÉn th·ªã m√°u Boss ‚ù§Ô∏è",
    Default = false,
    Callback = function(Value)
        ShowBossHP = Value
        if Value then
            task.spawn(function()
                while ShowBossHP do
                    task.wait(1)
                    local boss = workspace:FindFirstChild("Boss") -- ‚ö†Ô∏è thay ƒë√∫ng t√™n
                    if boss and boss:FindFirstChildOfClass("Humanoid") then
                        Fluent:Notify({
                            Title = "Boss HP",
                            Content = tostring(boss.Humanoid.Health).." / "..tostring(boss.Humanoid.MaxHealth),
                            Duration = 2
                        })
                    end
                end
            end)
        end
    end
})

Tabs.FramBoss:AddToggle("AutoAttack", {
    Title = "T·ª± ƒë√°nh khi c·∫ßm v≈© kh√≠ ‚öîÔ∏è",
    Default = false,
    Callback = function(Value)
        AutoAttack = Value
        if AutoAttack then
            task.spawn(function()
                while AutoAttack do
                    task.wait(0.2)
                    local char = game.Players.LocalPlayer.Character
                    if char and char:FindFirstChildOfClass("Tool") then
                        game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                    end
                end
            end)
        end
    end
})

----------------------------------------
-- Auto Heal / Item / Wood
----------------------------------------
local AutoSection = Tabs.Auto:AddSection("T·ª± ƒë·ªông")

Tabs.Auto:AddToggle("AutoHeal", {
    Title = "Auto Heal +50 HP ü©∏",
    Default = false,
    Callback = function(Value)
        AutoHeal = Value
        if AutoHeal then
            task.spawn(function()
                while AutoHeal do
                    task.wait(1)
                    local player = game.Players.LocalPlayer
                    local char = player.Character
                    if char and char:FindFirstChildOfClass("Humanoid") then
                        local hp = char.Humanoid.Health
                        if hp < 50 then
                            local oldTool = char:FindFirstChildOfClass("Tool")
                            -- ‚ö†Ô∏è thay "Bandage" th√†nh ƒë√∫ng t√™n item h·ªìi m√°u
                            local bandage = player.Backpack:FindFirstChild("Bandage")
                            if bandage then
                                bandage.Parent = char
                                bandage:Activate()
                                task.wait(1)
                                if oldTool then
                                    oldTool.Parent = char
                                end
                            end
                        end
                    end
                end
            end)
        end
    end
})

Tabs.Auto:AddToggle("AutoPickup", {
    Title = "Auto nh·∫∑t v·∫≠t ph·∫©m üéí",
    Default = false,
    Callback = function(Value)
        AutoPickup = Value
        if AutoPickup then
            task.spawn(function()
                while AutoPickup do
                    task.wait(0.5)
                    for _,item in pairs(workspace.Drops:GetChildren()) do -- ‚ö†Ô∏è thay ƒë√∫ng folder
                        if item:IsA("Part") or item:IsA("Tool") then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = item.CFrame
                        end
                    end
                end
            end)
        end
    end
})

Tabs.Auto:AddToggle("AutoWood", {
    Title = "Auto Farm G·ªó üå≤",
    Default = false,
    Callback = function(Value)
        AutoWood = Value
        if AutoWood then
            task.spawn(function()
                while AutoWood do
                    task.wait(1)
                    for _,tree in pairs(workspace.Wood:GetChildren()) do -- ‚ö†Ô∏è thay ƒë√∫ng folder
                        if tree:FindFirstChild("Hitbox") then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = tree.Hitbox.CFrame
                            game:GetService("VirtualUser"):ClickButton1(Vector2.new())
                        end
                    end
                end
            end)
        end
    end
})
