local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

local Window = Fluent:CreateWindow({
    Title = "Cộng Đồng Việt Nam: TestHub  |  By DuyVel",
    SubTitle = "Fluent "..Fluent.Version,
    TabWidth = 160,
    Size = UDim2.fromOffset(580, 460),
    Acrylic = true,
    Theme = "Rose"
})

local Tabs = {
    Main = Window:AddTab({Title = "Main", Icon = "home"}),
    FarmWood = Window:AddTab({Title = "Farm Gỗ", Icon = "tree"}),
    Settings = Window:AddTab({Title = "Settings", Icon = "settings"})
}

--// Tab Main
local WeaponDropdown = Tabs.Main:AddDropdown("SelectWeapon", {
    Title = "Select Weapon",
    Values = {"None", "Sword", "Gun", "Fist"},
    Multi = false,
    Default = 1,
    Callback = function(Value)
        Fluent:Notify({
            Title = "Weapon Selected",
            Content = "Bạn đã chọn: "..Value,
            Duration = 3
        })
    end
})

Tabs.Main:AddToggle("AutoMob", {
    Title = "Auto Quái",
    Default = false,
    Callback = function(Value)
        print("Auto Quái:", Value)
    end
})

Tabs.Main:AddToggle("FarmBoss", {
    Title = "Farm Boss",
    Default = false,
    Callback = function(Value)
        print("Farm Boss:", Value)
    end
})

Tabs.Main:AddToggle("AutoLoot", {
    Title = "Auto Loot (Range 500)",
    Default = false,
    Callback = function(Value)
        print("Auto Loot:", Value)
    end
})

Tabs.Main:AddButton({
    Title = "Tele vào chỗ boss",
    Callback = function()
        print("Teleport Boss")
    end
})

--// Tab Farm Gỗ
Tabs.FarmWood:AddButton({
    Title = "Tele farm gỗ",
    Callback = function()
        print("Teleport Farm Gỗ")
    end
})

Tabs.FarmWood:AddToggle("AutoFarmWood", {
    Title = "Auto Farm Gỗ",
    Default = false,
    Callback = function(Value)
        print("Auto Farm Gỗ:", Value)
    end
})

--// Tab Settings
local InterfaceManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/InterfaceManager.lua"))()
local SaveManager = loadstring(game:HttpGet("https://raw.githubusercontent.com/dawid-scripts/Fluent/master/Addons/SaveManager.lua"))()

InterfaceManager:SetLibrary(Fluent)
SaveManager:SetLibrary(Fluent)

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Fluent:Notify({
    Title = "TestHub",
    Content = "Menu loaded thành công!",
    Duration = 5
})
